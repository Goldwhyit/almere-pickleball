{
  "configVersion": 2,
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm install && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && npm run start:prod",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  }
}
